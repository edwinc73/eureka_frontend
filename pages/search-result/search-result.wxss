/* pages/search-result/search-result.wxss */
.search-box{
  margin-top: 208rpx;
}

.filter{
  margin-top: 8px;
  width: 100%;
  justify-content: space-between;
  overflow-x: scroll;
  white-space: nowrap;
}

.small{
  margin-right: 12px;
}

.search-result{
  margin: 8px auto;
}

.spacer{
  height: 110px;
  display: block;
}

.text-container{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.go-to-icon{
  width: 14px;
  height: 14px;
  box-sizing: border-box;
}

.p-bold{
  font-weight: bold;
  font-size: 16px;
  color: #191011
}

.create-button{
  display: flex;
  height: 60px;
  padding: 16px 0px;
  align-items: center;
  display: block;
  position: fixed;
  bottom: 32px;
  left: 32px;
  right: 32px;
  color: white;
  position: absolute;
  box-sizing: border-box;
  border-radius: 67px;
  background: linear-gradient(153deg, #52BE8D 0%, #A1D97E 100%);
  box-shadow: 0px 4px 30px 0px rgba(0, 0, 0, 0.20);
}
.floating{
  height: 60px;
  border-radius: 100px;
  color: white;
  position: fixed;
  bottom: 30px;
  left: 0;
  right: 0;
  line-height: 45px;
  background: linear-gradient(153deg, #52BE8D 0%, #A1D97E 100%);
  z-index: 1000;
  box-shadow: 0px 4px 30px 0px rgba(0, 0, 0, 0.15);
}
