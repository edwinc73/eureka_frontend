/* pages/search-result/search-result.wxss */
.search-box{
  margin-top: 208rpx;
}

.filter{
  margin-top: 8px;
  width: 100%;
  justify-content: space-between;
  overflow-x: scroll;
  white-space: nowrap;
}

.small{
  margin-right: 12px;
}

.search-result{
  margin: 8px auto;
}

.search-result-card{
  padding-top: 8px;
  padding-bottom: 8px;
  border-top: 1px solid #E3F0E6; 
}

.spacer{
  height: 110px;
  display: block;
}

.text-container{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.create-recipe{
  align-items: center;
}

.create-card{
  align-items: center;
  padding-bottom: 8px;
}

.go-to-icon{
  width: 14px;
  height: 14px;
  box-sizing: border-box;
}

.p-bold{
  font-weight: bold;
  font-size: 16px;
  color: #191011
}

.create-recipe .create-recipe-button{
  height: 60px;
  width: 60px;
  border-radius: 5px;
  background-color: #E3F0E6;
  color: white;
  font-size: 30px;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}


