}

.date-container {
  white-space: nowrap;
  margin: 15px 0;
  position: relative;
}

.date-container::after{
  content: "";
  position: absolute;
  left: -1px;
  top: 0;
  bottom: 0;
  height: 100%;
  width: 15px;
  display: block;
  background: linear-gradient(90deg, #FFF 0%, rgba(255, 255, 255, 0.00) 100%);
}

.text{
  position: absolute;
  top: 13px;
  bottom: 0;
  left: 0;
  right: 0;
}

.date-item {
  position: relative;
  display: inline-block;
  width: 92rpx;
  height: 75px;
  background-color: #E3F0E6;
  border-radius: 8px;
  text-align: center;
  margin: 0 10px;
}


.current-calories, .bg-chart{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: -120px -100px;
  height: 525px;
}

.chart-container{
  width: 320px;
  height: 150px;
  padding: 0;
  position: relative;
  display: flex;
  flex-direction: column;
}

.calorie{
  width: 320px;
  height: 150px;
  display: block;
}

.calorie-label{
  text-align: center;
  margin: -5px;
}

.calorie-value{
  position: absolute;
  text-align: center;
  width: 100%;
  top: calc(150px / 2 + 10px);
}

.goal-chart{
  height: 275px;
  background: #E3F0E6;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 20px;
  border-radius: 15px;
  justify-content: center;
}

.title-container{
  align-items: baseline;
  margin: 10px 0 10px;
  z-index: 100;
}