.container{
  margin-top: 208rpx;
}

.images-container{
  margin-bottom: 15px;
}

.p{
  margin-bottom: 5px;
}

.input-field{
  background-color: rgba(227, 240, 230, 1);
  border-radius: 15px;
  padding: 15px;
  margin-bottom: 15px;
  height: fit-content;
  display: flex;
  justify-content: left;
  align-items: center;
}

textarea[name="name"]{
  max-height: 20px;
  margin: -5px;
}

textarea[name="description"],textarea[name="instructions"]{
  font-family: "quicksand";
  width: 100%;
  margin: -5px;
}

.image-gallery{
  display: flex;
  white-space: nowrap;
  height: 100px;
}

.recipe-image{
  display: inline-block;
  width: 100px;
  height: 100px;
  border-radius: 15px;
  margin: 0 5px;
}

.recipe-image:first-child{
  margin: 0 5px 0px 0;
}

.image-uploader{
  color: white;
  text-align: center;
  line-height: 100px;
  background-color: rgba(227, 240, 230, 1);
  font-size: 30px;
  position: relative;
}

.image-uploader::before{
  content: '+';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(1.3);
}

.floating{
  height: 60px;
  border-radius: 100px;
  color: white;
  position: fixed;
  bottom: 30px;
  left: 0;
  right: 0;
  line-height: 45px;
  background: linear-gradient(153deg, #52BE8D 0%, #A1D97E 100%);
  z-index: 1000;
  box-shadow: 0px 4px 30px 0px rgba(0, 0, 0, 0.15);
}

hr{
  background-color: #E3F0E6 !important;
  margin: 4px 0 8px;
}

.cart-item{
  flex-direction: column;
}

.auto-grow-textarea {
  overflow: hidden;
  resize: none;
}


.badge-img-larger {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  margin-bottom: 48rpx
}
