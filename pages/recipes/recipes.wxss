.recipe-general-info{
  flex-direction: row;
}

.recipe-image{
  width: 80px;
  height: 80px;
  border-radius: 5px;
  margin-right: 10px;
}

.star{
  font-size: 12px;
}

.heart{
  width: 23px;
  height: 19px;
}

.edit-icon{
  margin-bottom: 10px;
}

.heart-container{
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.recipe-hr{
  background-color: #E3F0E6 !important;
  margin: 8px 0 12px;
}

.tab{
  display: flex;
  flex-direction: column;
  align-items: center;
}

slider{
  box-sizing: border-box;
  margin: 0 auto 15px;
}

.tabs-container{
  margin-bottom: 15px;
}

.tab-indicator{
  margin-top: 5px;
  display: block;
  width: 45rpx;
  height: 2px;
  background-color: #E3F0E6;
  transition: 0.3s ease-in-out;
}

.active{
  opacity: 1;
}

.inactive{
  opacity: 0;
}

.bubble{
  margin: 0 0 5px;
  width: calc(100% - 30px - 30px);
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100px;
}

.recipe-portion{
  background-color: #E3F0E6;
}

.recipe-calories{
  border: 1px solid #E3F0E6;
}

.portion{
  gap: 30px;
}

.nutrition{
  background-color: #E3F0E6;
  padding: 15px;
  border-radius: 15px;
  margin: 15px 0;
}

.title-container{
  align-items: baseline;
}

.divider{
  margin-top: 15px;
  height: 210rpx;
  width: 1px;
  display: block;
  background: #fff;
}

.large-text{
  font-size: 80rpx;
}

.nutrition-calories, .nutrition-macro{
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.macro{
  height: 90px;
  width: 270rpx;
}

.nutrient-bar{
  height: 100%;
}

.table-container {
  margin-top: 20px;
}

.table-row {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #E3F0E6;
}


.table-header, .table-header-main{
  flex: 1;
  text-align: right;
  padding: 8px;
}

.table-header-main{
  flex: 1;
  font-weight: bold;
  text-align: left;
  padding: 8px;
}

.table-cell {
  flex: 1;
  text-align: left;
  padding: 8px;
}

.text-right{
  text-align: right
}

.ingredients{
  padding: 15px;
  border-radius: 15px;
  background-color: rgba(227, 240, 230, 1);
  box-sizing: border-box;
  margin:0 0 15px;
}

.instruction{
  margin-bottom: 15px;
}

.title{
  margin-bottom: 5px;
}

.review-inputs-container{
  background-color:rgba(227, 240, 230, 1);
  border-radius: 15px;
  width: 100%;
  padding: 15px;
  margin: 0 0 15px;
  box-sizing: border-box;
}

.star-container{
  gap: 10px
}

.floating{
  height: 60px;
  border-radius: 100px;
  color: white;
  position: fixed;
  bottom: 30px;
  left: 0;
  right: 0;
  line-height: 45px;
  background: linear-gradient(153deg, #52BE8D 0%, #A1D97E 100%);
  z-index: 1000;
  box-shadow: 0px 4px 30px 0px rgba(0, 0, 0, 0.15);
}

.review-container{
  margin: 30px 0;
}

.mask{
  width: 100%;
  height: 100%;
  background-color: rgba(56, 55, 55, 0.12);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 900;
}

.window{
  display: flex;
  justify-content: center;
  align-items: center;
  top: 400rpx;
  right: 0;
  bottom: 0;
  left: 0rpx;
  margin: 0 auto;
  width: 560rpx;
  height: 800rpx;
  background-color: #E3F0E6;
  border-radius: 15px;
  position: fixed;
  z-index: 999;
  padding: 30px;
  box-sizing: border-box;
}

.badge-info{
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.badge-title{
  text-align: center;
  flex-direction: column;
  height: 100rpx;
  margin-bottom: 48rpx;
}

.date{
  text-align: center;
  width: 100%;
}

.badge-img-larger {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  margin-bottom: 48rpx
}