.search-box{
  margin-top: 208rpx;
}

.calorie-information{
  gap: 64rpx
}

.ingredients-list{
  margin-top: 30rpx;
}

.item-name{
  text-transform: capitalize;
}

.ingredient{
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

hr{
  background-color: #E3F0E6 !important;
  margin: 4px 0 8px;
}

.button{
  box-sizing: border-box;
  margin: 0 15px;
  border-radius: 100px;
  align-items: center;
  position: relative;
}

.floating{
  height: 60px;
  color: white;
  position: fixed;
  bottom: 30px;
  left: 0;
  right: 0;
  line-height: 45px;
  background: linear-gradient(153deg, #52BE8D 0%, #A1D97E 100%);
  z-index: 900;
  box-shadow: 0px 4px 30px 0px rgba(0, 0, 0, 0.15);
}

.add{
  background-color: #F8D477;
  height: 100%;
  width: 144rpx;
  border-radius: 0 50px 50px 0px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart-info{
  margin-left: 15px;
  color: white;
}

.cart-list{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 60px;
  margin: 0 15px;
  padding: 15px 15px 45px;
  background-color: #E3F0E6;
  border-radius: 15px;
}

.cart-item{
  margin: 4px
}

.cart-minus{
  height: 2px;
  width: 10px;
  margin: -15px;
  margin-right: 13px;
  padding: 15px;
}

.pop-up-container{
  position: fixed;
  top: 0%;
  left: 0;
  right: 0;
  bottom: 0;
  justify-content: center;
  padding:0 15px;
}

.pop-up-window{
  box-sizing: border-box;
}

.pop-up-window-bg{
  position: fixed;
  left: 0;
  top: 0;
  background-color: rgba(25, 16, 17, 0.15);
  width: 100%;
  height: 100%;
  z-index: 100;
}

.recipe-portion{
  background-color: #E3F0E6;
}

.bubble{
  margin: 15px 0 5px;
  width: calc(100% - 30px - 30px);
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100px;
}

.dialogue-window{
  box-sizing: border-box;
  background: white;
  width: 100%;
  padding: 30px 15px;
  border-radius: 15px;
  z-index: 1002;
  text-align: center;
}

.button{
  color: white;
  background: linear-gradient(153deg, #52BE8D 0%, #A1D97E 100%);
}